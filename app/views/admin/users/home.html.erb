<div class="bs-docs-section">
    <div class="page-header"></div>
    <%= form_for(:user, :url=>sessions_path) do |f| %>
        <fieldset>
            <div class="row">
                <div class="small-12 columns">
                    <%= f.label "username" %>
                    <%= f.text_field :name %>
                </div>
                <div class="small-6 columns">
                    <%= f.label "password" %>
                    <%= f.password_field :password %>
                </div>
                <div>
                    <%= f.submit "login", class: "btn btn-success" %>
                </div>
            </div>
        </fieldset>
    <% end %>
</div>

