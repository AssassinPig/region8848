<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <div class="page-header">
            <h1>目前分类</h1>
        </div>

        <div class="page-header">
            <%= link_to "新建类别", new_admin_category_path, class:'btn btn-default' %>
        </div>

        <table class="table table-hover"> 
            <thead>
                <tr>
                    <td>
                        类别名字
                    </td>
                    <td>
                        操作
                    </td>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <td>
                            <%= label 'category name', category.name %> 
                        </td>

                        <td>
                            <%= link_to "show", admin_category_path(category) %>
                            <%= link_to "edit", edit_admin_category_path(category) %>
                            <%= link_to "delete", admin_category_path(category), method: :delete, data: {confirm: "Are you sure?" }%>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
