<% provide(:title, 'admin' )%>
<% provide(:title_content, 'I am back!!!') %>
<div class="container">
    <%= form_for :new_post, :url => articles_path, :method => :post do |f| %>
        <div>
            <%= f.label :title %>
            <%= f.text_field :title, size: 40 %>
        </div>
        <div>
            <%= f.text_area :content , size: "120x30" %>
        </div>
        <div>
            <%= f.submit %>
        </div>
    <% end %>
</div>

<ul class="container">
    <% @posts.each do |post| %> 
        <li>
        <p><h1><%= link_to post.title, '#' %></h1></p>
        <p><%= post.content %></p>
        </li>
        <li>
        <%= link_to "delete", article_path(post), method: :delete, data: {confirm: "You sure?"} %>
        </li>
    <% end %>
</ul>

