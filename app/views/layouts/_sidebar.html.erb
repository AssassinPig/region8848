<% if !@categories.nil? and @categories.count > 0 %>
    <div class="sidebar-offcanvas" id="sidebar" role="navigation"> 
        <div class="list-group">
            <% @categories.each do |c| %>
                <a href="<%= category_path(c) %>" class="list-group-item"><%= c.name %></a>
            <% end %>
        </div>
    </div>
<% end %>
