<h1>new user</h1>
<%= form_for @user, :url => users_path, :method => :post do |f| %>
    <%= render 'shared/error_messages', :target => @user%>
    <%= f.label "user name"%>
    <%= f.text_field :name %>

    <%= f.label "email" %>
    <%= f.text_field :email %>

    <%= f.label "password" %>
    <%= f.password_field :password%>

    <%= f.label "password_confirmation" %>
    <%= f.password_field :password_confirmation%>

    <%= f.submit "Submit" %>
<% end %>
